{
  "manifest_version": 3,
  "name": "Cappi Paste",
  "description": "Multi-Dimensional Clipboard.",
  "version": "1.2",
  "icons": { "128": "icon.png" },
  "permissions": [
    "sidePanel", 
    "storage", 
    "scripting", 
    "activeTab",
    "clipboardWrite",
    "clipboardRead" 
  ],
  "background": { "service_worker": "background.js" },
  "side_panel": { "default_path": "sidepanel.html" },
  "commands": {
    "copy-to-shelf": {
      "suggested_key": { "default": "Alt+Shift+C", "mac": "Alt+Shift+C" },
      "description": "Stack to Shelf"
    },
    "batch-copy": {
      "suggested_key": { "default": "Alt+Shift+V", "mac": "Alt+Shift+V" },
      "description": "Copy All to Clipboard (Ready to Paste)"
    }
  },
  "action": { "default_title": "Open Cappi Paste" }
}
